<!DOCTYPE html>
<html>
  <head>
    <title>Ebay</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
    <div class="header">
      <div>Signed in as: <%= link_to current_user.name.titlecase, user_path(current_user) %></div>
      <div><%= link_to "Logout", logout_path %></div>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
