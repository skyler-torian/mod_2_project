<h1 class="heading_wrapper">Create an account</h1>
<div class="heading">Shebay</div>
<%= form_for @user, html:{class: "ui form"} do |f| %>
    <div class= "field">
    <%= f.label :name%>
    <%= f.text_field :name%></div>
    <div class= "field">
    <%= f.label :username%>
    <%= f.text_field :username%></div>
    <div class= "field">
    <%= f.label :password%>
    <%= f.password_field :password%></div>
    <button class= "ui button" type="submit">Submit</button>
    <%= link_to 'Back to log in page', login_path %>
<% end %>
</form>
    
    

