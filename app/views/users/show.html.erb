<div class="show_header">
    <h1 ><%= @user.name.titlecase%>'s profile page</h1>
</div>

    <h3 class = "items_header">Items you're selling: </h3>
    <ul class ="reg_ul">
        <div class = "ui form">
            <%@user.items.each do |item|%>
                <div class ="li_name"> 
                    <%=link_to item.name, item_path(item) %>
                </div>

                    <%=link_to(item, method: :delete)  do %>
                        <div class="ui animated button" tabindex="0">
                            <div class="visible content">
                             Delete this item
                            </div>
                            <div class="hidden content">
                                <i class="trash alternate icon"></i>
                            </div>
                        </div>
                    <% end %>

            <% end %>
                <button class="tiny ui button"><%= link_to "Sell an item.", new_item_path %></button>
            </div>
        </div>
        </ul>
            <h3 class = "bidding_header">Bidding auctions you are in and the latest bids:</h3>
        <div class = "ui form">
            <ul class ="reg_ul">
               <% @user.latest_bids.each do |bid| %>
                <%=link_to bid.item.name, item_path(bid.item)%>: $<%=bid.amount%> <button class = "tiny ui button"><%= link_to "Delete this bid", bid_path(bid.item), :method => :delete %></button>
            <% end %>
            
            </ul>
        </div>









