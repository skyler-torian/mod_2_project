
<h1> Add a new item.</h1>
<%= form_for @item do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name%><br />

    <%= f.label :price%>
    <%= f.number_field :price%><br />

    <%= f.label :desc%>
    <%= f.text_area :desc%><br />

    <%= f.collection_select :user_ids, User.all, :id, :name%>
   
    <%=f.submit%>

  
<% end %>