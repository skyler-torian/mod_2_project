<% if @bid.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @bid.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<h1> place a new item.</h1>
<%= form_for @bid do |f| %>
    <%= f.collection_select :user_id, User.all, :id, :name%>
    <%= f.collection_select :item_id, Item.all, :id, :name%>
   
    <%= f.label :amount%>
    <%= f.number_field :amount%><br />

    <%=f.submit%>

  
<% end %>